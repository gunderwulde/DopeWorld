<?xml version='1.0' encoding='utf-8'?>
<widget id="com.unknot.dopeworld" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DopeWorld</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-facebook4" spec="~1.7.1">
        <variable name="APP_ID" value="1128614957175001" />
        <variable name="APP_NAME" value="DopeWorld" />
    </plugin>
    <preference name="android-minSdkVersion" value="15" />
    <preference name="Fullscreen" value="True" />
    <preference name="Orientation" value="portrait" />
    <preference name="android-installLocation" value="auto" />
    <preference name="android-maxSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="19" />
    <plugin name="cordova-custom-config" src="https://github.com/dpa99c/cordova-custom-config" version="2.0.0" />
    <platform name="android">
        <preference name="android-manifest/@android:installLocation" value="auto" />
    </platform>
</widget>
